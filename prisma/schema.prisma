generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SecurePoint {
  id        BigInt @id @default(autoincrement())
  nome      String
  city      String
  state     String
  max_people Int
  current_people Int
  street    String
  longitude String
  latitude  String
  user_point  User @relation(fields: [user_id], references: [id])
  user_id   String
  items     Json
}

model User {
  id       String  @id @default(cuid())
  email    String  @unique
  name     String?
  password String
  role     Role    @default(USER)
  securepoint SecurePoint[]
}

enum Role {
  USER
  ADMIN
}
